{
  "name": "dcmjs",
  "version": "0.11.0",
  "description": "Javascript implementation of DICOM manipulation",
  "main": "build/dcmjs.js",
  "module": "build/dcmjs.es.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "test": "node test/tests.js",
    "build": "rollup -c",
    "build:type": "tsc",
    "build:doc": "jsdoc -c jsdoc.conf.js -r README.md",
    "build:examples": "npm run build && npx cpx 'build/**/*.{js,map}' examples/js",
    "start": "rollup -c -w",
    "lint": "eslint -c .eslintrc.json --fix src && prettier --tab-width 4 --write src/**/*.js",
    "watch:doc": "nodemon --exec 'npm run build:doc' --watch src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dcmjs-org/dcmjs.git"
  },
  "author": "Steve Pieper",
  "license": "MIT",
  "types": "./src/index.d.ts",
  "bugs": {
    "url": "https://github.com/dcmjs-org/dcmjs/issues"
  },
  "homepage": "https://github.com/dcmjs-org/dcmjs#readme",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "acorn": "^7.1.0",
    "acorn-jsx": "^5.2.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "follow-redirects": "^1.10.0",
    "husky": "^1.3.1",
    "jsdoc": "^3.6.6",
    "lint-staged": "^8.2.1",
    "nodemon": "^2.0.7",
    "prettier": "^1.19.1",
    "rollup": "^1.31.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.2.4",
    "typescript": "^4.1.3",
    "unzipper": "^0.10.9"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.3",
    "@babel/runtime": "^7.8.4",
    "loglevelnext": "^3.0.1",
    "ndarray": "^1.0.19",
    "gl-matrix": "^3.1.0",
    "lodash.clonedeep": "^4.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --tab-width 4 --write",
      "git add"
    ]
  }
}
